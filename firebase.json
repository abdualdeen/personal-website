{
  "hosting": {
    "public": "deploy",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "hosting": {
      "host": "10.0.0.22",
      "port": 5000,
      "_comment": "the emulators section is added so other devices can see the local server on the network."
    }
  }
}
